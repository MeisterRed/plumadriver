{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["dom"],
    "module": "commonjs",
    "outDir": "./build",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "target": "ESNext",
    "watch": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true
  },
  "include": ["./src"]
}
